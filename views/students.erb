<h1>Students</h1>
<a class="myButton" href="/students/new">Add a student</a>
<hr>
<div>
  <% if @students.any? %>
      <ul id="students">
        <% @students.each do |student| %>
            <li>
              <a
              href="/students/<%= student.id %>"
              style="font-family:'Verdana'; font-size: medium; color: chocolate">
                <%= student.name %>
              </a>
            </li>
        <% end %>
      </ul>
  <% else %>
      <p>No students created!</p>
  <% end %>
</div>